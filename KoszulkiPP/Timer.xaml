<Window x:Class="KoszulkiPP.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoszulkiPP"
        mc:Ignorable="d"
        Title="Timer" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" ForceCursor="True" WindowState="Maximized">
    <Window.Background>
        <ImageBrush ImageSource="Resources/plain_yellow_desktop.jpg" />
    </Window.Background>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="500">

        <TextBlock x:Name="lblClockTime" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Unpack Regular" Height="104" Margin="0" Width="305" TextAlignment="Center" Text="00:00:00" />
        <TextBlock HorizontalAlignment="Center" Margin="100,169,178,295" TextWrapping="Wrap" Text="Następny projekt za:" VerticalAlignment="Center" FontFamily="Unpack Regular" FontSize="36"/>

    </Grid>
</Window>
